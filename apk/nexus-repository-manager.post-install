#!/bin/sh

echo post $1
# start the service upon first installation
if [ $1 = 1 ] || [ "$1" = "configure" ]; then
  systemctl daemon-reload
  systemctl enable %{service_name}
  systemctl start %{service_name}
fi
# start the service after upgrading
if [ $1 = 2 ] || [ "$1" = "upgrade" ]; then
  systemctl start %{service_name}
fi
